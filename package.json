{
  "name": "simple-redux-store",
  "version": "1.0.2",
  "description": "基于react hooks/redux的简单存储方案",
  "keywords": [
    "react",
    "redux",
    "store"
  ],
  "license": "MIT",
  "repository": "https://github.com/leonwgc/simple-redux-store",
  "bugs": {
    "url": "https://github.com/leonwgc/simple-redux-store/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "build": "father-build --cjs --esm && tsc",
    "dev": "father-build --esm -w",
    "pub": "bash pub.sh"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-stage-0": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/react-redux": "^7.1.7",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "father-build": "^1.19.5",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4",
    "yargs": "^15.3.1"
  },
  "files": [
    "dist",
    "types"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,less}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
